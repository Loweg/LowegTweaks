<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!-- Luciferium -->
	<ThingDef ParentName="RoughPlantBase">
		<defName>VBE_LuciferiumPowder</defName>
		<label>luciferium powder</label>
		<description>A very finely blended powder made from luciferium. Usually put around rims of alcoholic drinks in bars frequented by the wealthy and powerful. Provides a very diluted version of the drug without risk of addictions.</description>
		<graphicData>
			<texPath>Things/Items/Condiments/VBE_LuciferiumPowder</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>130</MarketValue>
			<Nutrition>0</Nutrition>
			<Flammability>1.3</Flammability>
		</statBases>
		<comps>
			<li Class="CompProperties_Rottable">
				<daysToRotStart>60</daysToRotStart>
				<rotDestroys>true</rotDestroys>
			</li>
		</comps>
		<thingCategories>
			<li>VCE_Condiments</li>
		</thingCategories>
		<ingestible>
			<preferability>NeverForNutrition</preferability>
			<optimalityOffsetFeedingAnimals>-50</optimalityOffsetFeedingAnimals>
			<specialThoughtAsIngredient>VBE_ConsumedLuciferiumPowder</specialThoughtAsIngredient>
		</ingestible>
		<ingredient>
			<mergeCompatibilityTags>
				<li>Condiments</li>
			</mergeCompatibilityTags>
		</ingredient>
	</ThingDef>

	<RecipeDef>
		<defName>VBE_MakeLuciferiumPowder</defName>
		<label>make luciferium powder</label>
		<description>Make a very finely blended powder made from luciferium. Usually put around rims of alcoholic drinks in bars frequented by the wealthy and powerful.</description>
		<jobString>Making luciferium powder.</jobString>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<workAmount>200</workAmount>
		<recipeUsers>
			<li>VCE_CondimentPrepTable</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Luciferium</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Luciferium</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<VBE_LuciferiumPowder>5</VBE_LuciferiumPowder>
		</products>
		<researchPrerequisite>VCE_CondimentsResearch</researchPrerequisite>
	</RecipeDef>

	<ThoughtDef>
		<defName>VBE_ConsumedLuciferiumPowder</defName>
		<thoughtClass>VanillaCookingExpanded.Thought_Hediff</thoughtClass>
		<hediff>VBE_ConsumedLuciferiumPowder</hediff>
		<durationDays>1</durationDays>
		<stages>
			<li>
				<label>Consumed luciferium powder</label>
				<description>Yummy.</description>
				<baseMoodEffect>0</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<HediffDef>
		<defName>VBE_ConsumedLuciferiumPowder</defName>
		<label>consumed luciferium powder (from meal)</label>
		<makesSickThought>false</makesSickThought>
		<description>Luciferium powder is a very finely blended powder made from luciferium. So diluted, the drug won't certainly heal any wounds, but it will reinvigorate its consumer considerably.</description>
		<tendable>false</tendable>
		<isBad>false</isBad>
		<defaultLabelColor>(92,62,198)</defaultLabelColor>
		<hediffClass>HediffWithComps</hediffClass>
		<initialSeverity>1.0</initialSeverity>
		<maxSeverity>1.0</maxSeverity>
		<comps>
			<li Class="VanillaCookingExpanded.HediffCompProperties_WhileHavingThoughts">
				<thoughtDefs>
					<li>VBE_ConsumedLuciferiumPowder</li>
				</thoughtDefs>
			</li>
		</comps>
		<stages>
			<li>
				<painFactor>0.95</painFactor>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>0.02</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>0.02</offset>
					</li>
					<li>
						<capacity>Sight</capacity>
						<offset>0.05</offset>
					</li>
					<li>
						<capacity>BloodFiltration</capacity>
						<offset>0.05</offset>
					</li>
					<li>
						<capacity>BloodPumping</capacity>
						<offset>0.05</offset>
					</li>
					<li>
						<capacity>Metabolism</capacity>
						<offset>0.02</offset>
					</li>
					<li>
						<capacity>Breathing</capacity>
						<offset>0.02</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>


